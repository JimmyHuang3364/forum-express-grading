<h1>人氣餐廳</h1>
<hr />

{{#each restaurants}}
<div>
  <div class="card mb-3 mx-auto" style="max-width: 50%;">
    <div class="d-flex">
      <div>
        <img src="{{this.image}}" style="width: 200px;" alt="...">
      </div>
      <div class="ml-2">
        <div class="card-body">
          <h5 class="card-title">{{this.name}}</h5>
          <p class="card-text"><small class="bg-secondary text-light px-1 " style="border-radius: 5px;">收藏數: {{this.favoritedCount}}</small></p>
          <p class="card-text">{{this.description}}</p>
          <div class="d-flex">
            <a class="btn btn-primary" href="/restaurants/{{this.id}}" role="button">Show</a>
            {{#if this.isFavorited }}
            <form action="/favorite/{{this.id}}?_method=DELETE" method="POST"><button type="submit" class="btn btn-danger ml-2">移除最愛</button></form>
            {{else}}
            <form action="/favorite/{{this.id}}" method="POST"><button type="submit" class="btn btn-primary ml-2">加到最愛</button></form>
            {{/if}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{{/each}}